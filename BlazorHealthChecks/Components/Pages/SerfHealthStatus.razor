@using BlazorHealthChecks.Models

@code {
    [Parameter]
    public HealthCheckModel? healthCheck { get; set; }

    private string GetStatusColor()
    {
        return healthCheck?.IsHealthy == true ? "green" : "red";
    }
}

<div class="status-card" style="border-left: 5px solid @GetStatusColor();">
    <div class="status-header">
        <span class="check-icon" style="color: @GetStatusColor();">✔</span> Serf Health Status
    </div>

    <div class="status-details">
        <strong>Details for @healthCheck?.Name:</strong>
        <p>Health Status: @(healthCheck?.IsHealthy == true ? "Healthy" : "Unhealthy")</p>
        <p>On State From: @healthCheck?.OnStateFrom</p>
        <p>Last Execution: @healthCheck?.LastExecution</p>
    </div>

    <div class="output-box">
        @* @Status.Output *@
    </div>
</div>
